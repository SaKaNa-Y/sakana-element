{
  "name": "@sakana-element/workspace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter @sakana-element/play dev",
    "story": "pnpm --filter @sakana-element/play storybook",
    "docs:dev": "pnpm --filter @sakana-element/docs dev",
    "docs:build": "pnpm --filter @sakana-element/docs build",
    "test": "run-s test-utils test-hooks test-comp",
    "test-comp": "cross-env NODE_ENV=test pnpm --filter @sakana-element/hooks build && vitest --config vitest.browser.config.ts --run --coverage",
    "test-utils": "cross-env NODE_ENV=test pnpm --filter @sakana-element/utils test",
    "test-hooks": "cross-env NODE_ENV=test pnpm --filter @sakana-element/hooks test",
    "build": "run-s build-hooks build-comp",
    "build-comp": "cross-env NODE_ENV=production pnpm --filter sakana-element build",
    "build-hooks": "cross-env NODE_ENV=production pnpm --filter @sakana-element/hooks build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter sakana-element build:watch",
    "changed": "dotenv lerna version --conventional-commits --create-release github --yes",
    "changed:patch": "dotenv lerna version patch --conventional-commits --create-release github --yes",
    "changed:major": "dotenv lerna version major --conventional-commits --create-release github --yes",
    "release": "lerna publish from-package --yes",
    "lint": "biome lint packages libs",
    "lint:fix": "biome lint --write packages libs",
    "format": "biome format --write packages libs",
    "check": "biome check packages libs",
    "check:fix": "biome check --write packages libs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,vue}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,jsonc,css}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@lerna-lite/cli": "^3.12.3",
    "@lerna-lite/publish": "^3.8.0",
    "@lerna-lite/version": "^3.8.0",
    "@popperjs/core": "^2.11.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.20",
    "@types/shelljs": "^0.8.15",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitejs/plugin-vue-jsx": "^5.1.4",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "husky": "9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.58.2",
    "postcss-color-mix": "^1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.1",
    "shelljs": "^0.9.2",
    "typescript": "^5.2.2",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18",
    "vue-tsc": "^2.2.12",
    "vue3-i18n": "^1.1.5"
  },
  "dependencies": {
    "@sakana-element/hooks": "workspace:*",
    "@sakana-element/locale": "workspace:*",
    "@sakana-element/theme": "workspace:*",
    "@sakana-element/utils": "workspace:*",
    "@sakana-element/vite-plugins": "workspace:*",
    "lodash-es": "^4.17.21",
    "sakana-element": "workspace:*",
    "vue": "^3.4.19",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@parcel/watcher"
    ]
  }
}
